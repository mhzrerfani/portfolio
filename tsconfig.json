{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ESNext",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "target": "ES6",
    "skipLibCheck": true,
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "./build",
    "rootDir": "src"
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.svelte",
    "app.js"
  ],
  "exclude": ["node_modules", "dev", "lib", "test"]
}
